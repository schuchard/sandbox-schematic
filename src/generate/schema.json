{
  "$schema": "http://json-schema.org/schema",
  "id": "SchuchardSchematicGenerator",
  "title": "Schematic Generator Options Schema",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "description": "Path to write the schematic to",
      "default": "."
    },
    "name": {
      "type": "string",
      "description": "Name of the schematic, example: ng add NAME"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}

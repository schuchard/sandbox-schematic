{
  "name": "@schuchard/schematic-sandbox",
  "version": "0.0.0",
  "main": "src/schematics/index.js",
  "bin": "src/schematics/index.js",
  "schematics": "./src/collection.json",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:clean:launch": "yarn build && yarn clean:launch",
    "clean": "rm -rf sandbox && mkdir sandbox",
    "clean:launch": "yarn clean && yarn launch",
    "launch": "cd sandbox && schematics @schuchard/schematic-sandbox:build mySchematic --author=kevin",
    "test": "yarn build:clean:launch && yarn test:sandbox && yarn clean",
    "test:sandbox": "cd sandbox && cd mySchematic && cd sandbox && yarn lint && yarn test && yarn e2e && yarn build",
    "link:schematic": "yarn link && cd sandbox && yarn link @schuchard/schematic-sandbox",
    "prettier": "prettier --parser typescript --write '**/*.ts'"
  },
  "dependencies": {
    "@angular-devkit/core": "^7.0.5",
    "@angular-devkit/schematics": "^7.0.5",
    "@angular-devkit/schematics-cli": "^0.10.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.5",
    "@angular/cdk": "^7.0.4",
    "@angular/cli": "~7.0.5",
    "@angular/compiler-cli": "^7.0.3",
    "@angular/language-service": "^7.0.3",
    "@schematics/angular": "^7.0.5",
    "@types/jasmine": "^2.8.11",
    "@types/node": "^10.12.7",
    "codelyzer": "~4.5.0",
    "husky": "1.1.4",
    "jasmine": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "lint-staged": "8.0.4",
    "prettier": "1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}